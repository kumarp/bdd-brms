package com.rhc.insurance.rules

import com.rhc.insurance.Member;
import com.rhc.insurance.Policy;

import java.math.BigDecimal; 

dialect "mvel";


rule "Quadrant 1"

    when
        //conditions
	$member : Member
        (
        	physicalHealth.compareTo(new BigDecimal(15)) == -1,
        	physicalHealth.compareTo(new BigDecimal(15)) == -1
		)
        
    then
        //actions
        $member.setQuadrant(1);
        System.out.println("fired rule " + kcontext.getRule().getName());
    

end
